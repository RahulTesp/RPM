<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.rpm.clynx" >

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <!-- Declare that telephony hardware is NOT required -->
    <uses-feature android:name="android.hardware.telephony" android:required="false" />
    <uses-permission android:name="android.permission.ACCESS_MEDIA_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        tools:replace="android:icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RPM"
        android:name="com.rpm.clynx.utility.MyApplication"
        tools:targetApi="31" >

        <receiver android:name=".service.NotificationReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.rpm.clynx.NOTIFICATION_RECEIVED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".service.MyLogoutReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.rpm.clynx.ACTION_LOGOUT_RESULT" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.rpm.clynx.activity.ChangePassword"
            android:exported="false" />
        <activity
            android:name="com.rpm.clynx.activity.AddMedication"
            android:exported="false" />
        <activity
            android:name="com.rpm.clynx.auth.OTP"
            android:parentActivityName="com.rpm.clynx.fragments.Login"
            android:exported="false" />
        <activity
            android:name="com.rpm.clynx.auth.GenerateOTP"
            android:parentActivityName="com.rpm.clynx.fragments.Login"
            android:exported="false" />
        <activity
            android:name="com.rpm.clynx.auth.ResetPassword"
            android:parentActivityName="com.rpm.clynx.fragments.Login"
            android:exported="false" />
        <activity
            android:name="com.rpm.clynx.home.Home"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="com.rpm.clynx.MainActivity"
            android:theme="@style/AppTheme"
            android:exported="false" />
        <activity
            android:name="com.rpm.clynx.fragments.MessageActivity"
            android:exported="false" />
        <activity
            android:name="com.rpm.clynx.fragments.ChatAddActivity"
            android:exported="false" />
        <activity
            android:name="com.rpm.clynx.fragments.Login"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.VideoCallTwilio"
            android:configChanges="orientation|screenSize"
            android:parentActivityName=".home.Home"
            android:exported="false" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />
        <service
            android:name=".service.PushNotificationService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>
</manifest>



