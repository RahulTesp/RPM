<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pgm_info_bg"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/itemDiagcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dear, this is a test notification placeholder and will be replaced with notifications out of API result."
                android:textColor="@color/black"
                android:textColorHint="@color/text_light"
                android:textSize="16sp"
                app:fontFamily="@font/rubik_regular" />

            <TextView
                android:id="@+id/itemSymbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                android:textColor="@color/black"
                android:textColorHint="@color/text_light"
                android:textSize="16sp"
                app:fontFamily="@font/rubik_regular" />

            <TextView
                android:id="@+id/item_diagnosis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dear, this is a test notification placeholder and will be replaced with notifications out of API result."
                android:textColor="@color/black"
                android:textColorHint="@color/text_light"
                android:textSize="16sp"
                app:fontFamily="@font/rubik_regular" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>