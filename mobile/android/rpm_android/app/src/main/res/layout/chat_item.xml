<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linChatlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:background="@drawable/myinfo_card_bg_radius"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Row: Name on Left, Time on Right -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Chat Member Name (Left Side) -->
            <TextView
                android:id="@+id/itemChatMemNm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat Member"
                android:textSize="18sp"
                android:textColor="@color/Primary_dark"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_alignParentStart="true"/>

            <!-- Typing Indicator (Below Chat Member Name) -->

            <!-- Typing Indicator (Next to Chat Member Name with 5dp Spacing) -->
            <TextView
                android:id="@+id/itemTypingIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Typing..."
                android:textSize="14sp"
                android:textColor="@color/purple_400"
                android:fontFamily="sans-serif"
                android:visibility="gone"
                android:layout_toEndOf="@id/itemChatMemNm"
                android:layout_marginStart="5dp"
                android:gravity="center_vertical"/>


            <!--            <TextView-->
<!--                android:id="@+id/itemTypingIndicator"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Typing..."-->
<!--                android:textSize="14sp"-->
<!--                android:textColor="@color/purple_400"-->
<!--                android:fontFamily="sans-serif"-->
<!--                android:visibility="gone"-->

<!--                android:layout_marginStart="10dp"-->
<!--                android:layout_marginTop="4dp"/>-->
            <!-- Message Time (Right Side) -->
            <TextView
                android:id="@+id/itemMsgTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:20 AM"
                android:textSize="16sp"
                android:textColor="@color/ChatTimeBlack"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/itemLastMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:textSize="14sp"
                android:textColor="@color/ChatTimeBlack"
                android:fontFamily="sans-serif"

                android:layout_below="@id/itemChatMemNm"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"/>



            <!-- Message Count (Below Time) -->
            <TextView
                android:id="@+id/itemMsgCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="14sp"
                android:textColor="@color/Primary_dark"
                android:textStyle="bold"
                android:background="@drawable/card_chat_count_bg"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:visibility="visible"
                android:layout_below="@id/itemMsgTime"
                android:layout_alignEnd="@id/itemMsgTime"
                android:layout_marginTop="4dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>

