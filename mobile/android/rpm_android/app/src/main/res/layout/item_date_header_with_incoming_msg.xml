<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">

    <!-- Date Header Layout with Horizontal Line -->
    <LinearLayout
        android:id="@+id/dateHeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_centerHorizontal="true">

        <!-- Left Divider -->
        <View
            android:id="@+id/leftDivider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@drawable/divider_bg" />

        <!-- Date Text -->
        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:background="@drawable/chat_date_bg"
            android:textColor="@color/Primary_text"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Feb 13, 2025"
            android:layout_marginHorizontal="8dp" />

        <!-- Right Divider -->
        <View
            android:id="@+id/rightDivider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@drawable/divider_bg" />

    </LinearLayout>

    <!-- Incoming Message Layout -->
    <RelativeLayout
        android:id="@+id/incomingLayout"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateHeaderLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:background="@drawable/incoming_msg_bubble">

        <TextView
            android:id="@+id/incomingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:textIsSelectable="true"
            android:textSize="12sp"
            android:layout_marginLeft="12dp"
            android:textColor="@color/ChatMsgTimeClr"
            android:text="Incoming Time"/>

        <TextView
            android:id="@+id/incomingMessageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/ChatTimeBlack"
            android:layout_below="@id/incomingTime"
            android:layout_alignStart="@id/incomingTime"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="6dp"
            android:text="Incoming Message"/>
    </RelativeLayout>
</RelativeLayout>
