<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background1"
    tools:context="com.rpm.clynx.activity.ProgramInfoActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/background1"
        android:labelFor="@id/constraint2"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_baseline_west_24">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="Program Info"
            android:textAlignment="center"
            android:textColor="@color/Primary_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="@dimen/margin_10dp"
        app:cardCornerRadius="@dimen/margin_10dp"
        app:cardBackgroundColor="@color/background_grey1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="1.0">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/pgminfo_tablayout"
            style="@style/RoundedTabLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/background_grey1"
            app:layout_constraintCircleRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintVertical_bias="1.0"
            app:tabBackground="@drawable/tab_layout_bg"
            app:tabIconTint="@color/tab_icon"
            app:tabIndicatorColor="@color/colorPrimary"
            app:tabInlineLabel="true"
            app:tabSelectedTextColor="@color/colorPrimary"
            app:tabTextAppearance="@style/CustomTextAppearanceTab">

<!--            app:tabInlineLabel="true"-->
<!--            app:tabIconTint="@color/unselected_color"-->
<!--            app:tabSelectedIconColor="@color/blue_A40"-->
<!--            app:tabSelectedTextColor="@color/colorAccent"-->
<!--            app:tabTextColor="@color/green_800"-->

            <!--            app:tabIndicatorColor="@color/indigo_A700"-->


            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:icon="@drawable/icons_settings"

                />

            <!--            <ImageView-->
            <!--                android:layout_width="60dp"-->
            <!--                android:layout_height="70dp"-->

            <!--                android:padding="10dp"-->
            <!--                android:src="@drawable/icons_program" />-->


            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/icons_settings"

                />
            <!--            android:text="Communication"-->
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:icon="@drawable/icons_settings" />
            <!--            android:text="Preference"-->
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/icons_settings" />
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/icons_settings" />

        </com.google.android.material.tabs.TabLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/ll_personal_pgminfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/card_view">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPgmPager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/background2" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>