<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/background3"
tools:context="com.rpm.clynx.fragments.DeviceDetailsFragment">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Device Details"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:padding="15dp"
        android:layout_marginBottom="@dimen/margin_5dp"
        app:fontFamily="@font/rubik_semibold"
        tools:ignore="MissingConstraints" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin_20dp"
                    android:orientation="vertical">







<!--                    <TextView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:id="@+id/devno"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginTop="@dimen/margin_20dp"-->
<!--                        android:text=""-->
<!--                        android:textColor="@color/accent2"-->
<!--                        android:textSize="18sp"-->
<!--                        android:textStyle="bold" />-->







                    <androidx.recyclerview.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:id="@+id/fragmentDevice"
                        android:name="com.rpm.clynx.fragments.DeviceDetailsFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        app:layoutManager="LinearLayoutManager"
                        tools:context="com.rpm.clynx.fragments.DeviceDetailsFragment"
                        tools:listitem="@layout/device_item_list"
                        app:layout_constraintTop_toBottomOf="@+id/devno" />

                    <TextView
                        android:id="@+id/empty_viewDD"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:visibility="gone"
                        android:text="@string/no_data_available" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="300dp"/>



                </LinearLayout>





        </androidx.core.widget.NestedScrollView>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>