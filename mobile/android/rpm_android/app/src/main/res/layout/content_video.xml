<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/video_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:showIn="@layout/activity_video_call">

    <com.twilio.video.VideoView
        android:id="@+id/thumbnail_video_view"
        app:tviOverlaySurface="true"
        app:tviMirror="true"
        android:visibility="gone"
        android:layout_width="196dp"
        android:layout_height="196dp"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|start"/>

    <com.twilio.video.VideoView
        android:id="@+id/primary_video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"/>




    <FrameLayout
        android:id="@+id/local_placeholder"
        android:layout_width="196dp"
        android:layout_height="196dp"
        android:background="@color/Primary_text"
        android:visibility="gone"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|start">

        <TextView
            android:id="@+id/localVideoOffText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Video is Paused"
            android:textColor="@color/ChatBox"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/remote_placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Primary_light"
        android:visibility="gone">

        <TextView
            android:id="@+id/remoteVideoOffText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video is Paused"
            android:textColor="@color/Primary_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"/>
    </FrameLayout>



