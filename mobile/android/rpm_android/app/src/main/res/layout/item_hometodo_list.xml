<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:background="@drawable/card_background_white"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_todo_list_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="15dp"
                android:text="Medicine"
                android:textColor="@color/Primary_dark"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/rubik_regular" />

            <TextView
                android:id="@+id/item_todo_list_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="45 Min Ago"
                android:textAlignment="viewEnd"
                android:textColor="@color/text_dark"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/rubik_regular" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_todo_list_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medicine Name - After Meal"
                android:textColor="@color/text_dark"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/rubik_regular" />

<!--            <TextView-->
<!--                android:id="@+id/item_todo_list_interval"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->

<!--                android:text="45 Min Ago"-->

<!--                android:textColor="@color/text_dark"-->
<!--                android:textSize="20sp"-->
<!--                android:textStyle="bold" />-->

        </LinearLayout>

    </LinearLayout>
</LinearLayout>