<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.004">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="40dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/margin_20dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Communication Details"
                                android:textColor="@color/black"
                                android:textSize="24sp"
                                app:fontFamily="@font/rubik_semibold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_10dp"
                                android:layout_marginTop="@dimen/margin_20dp"
                                android:text="Address Line 1"
                                android:textColor="@color/Primary_dark"
                                android:textSize="14sp"
                                app:fontFamily="@font/rubik_regular" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/textfield_background"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/frag_Communicn_address_line1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_10dp"
                                    android:backgroundTint="@android:color/transparent"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/text_light"
                                    android:textSize="16sp"
                                    app:fontFamily="@font/rubik_regular" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_10dp"
                                android:layout_marginTop="@dimen/margin_10dp"
                                android:text="Address Line 2"
                                android:textColor="@color/Primary_dark"
                                android:textSize="14sp"
                                app:fontFamily="@font/rubik_regular" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/textfield_background"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/frag_Communicn_address_line2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_10dp"
                                    android:backgroundTint="@android:color/transparent"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/text_light"
                                    android:textSize="16sp"
                                    app:fontFamily="@font/rubik_regular" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/margin_10dp"
                                        android:layout_marginTop="@dimen/margin_10dp"
                                        android:text="Zip Code"
                                        android:textColor="@color/Primary_dark"
                                        android:textSize="14sp"
                                        app:fontFamily="@font/rubik_regular" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:layout_marginTop="10dp"
                                        android:background="@drawable/textfield_background"
                                        android:gravity="center">

                                        <TextView
                                            android:id="@+id/frag_Communicn_zip_code"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/margin_10dp"
                                            android:backgroundTint="@android:color/transparent"
                                            android:maxLines="1"
                                            android:singleLine="true"
                                            android:textColor="@color/black"
                                            android:textColorHint="@color/text_light"
                                            android:textSize="16sp"
                                            app:fontFamily="@font/rubik_regular" />
                                    </LinearLayout>

                                </LinearLayout>

                                <View
                                    android:layout_width="@dimen/margin_20dp"
                                    android:layout_height="0dp" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/margin_20dp"
                                        android:layout_marginTop="@dimen/margin_10dp"
                                        android:text="City"
                                        android:textColor="@color/Primary_dark"
                                        android:textSize="14sp"
                                        app:fontFamily="@font/rubik_regular" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:layout_marginTop="10dp"
                                        android:background="@drawable/textfield_background"
                                        android:gravity="center">

                                        <TextView
                                            android:id="@+id/frag_Communicn_city"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/margin_10dp"
                                            android:backgroundTint="@android:color/transparent"
                                            android:maxLines="1"
                                            android:singleLine="true"
                                            android:textColor="@color/black"
                                            android:textColorHint="@color/text_light"
                                            android:textSize="16sp"
                                            app:fontFamily="@font/rubik_regular" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_10dp"
                                android:layout_marginTop="@dimen/margin_20dp"
                                android:text="State"
                                android:textColor="@color/Primary_dark"
                                android:textSize="14sp"
                                app:fontFamily="@font/rubik_regular" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/textfield_background"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/frag_Communicn_state"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_10dp"
                                    android:backgroundTint="@android:color/transparent"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/text_light"
                                    android:textSize="16sp"
                                    app:fontFamily="@font/rubik_regular" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_10dp"
                                android:layout_marginTop="@dimen/margin_10dp"
                                android:text="Time Zone"
                                android:textColor="@color/Primary_dark"
                                android:textSize="14sp"
                                app:fontFamily="@font/rubik_regular" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/textfield_background"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/frag_Communicn_time_zone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_10dp"
                                    android:backgroundTint="@android:color/transparent"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/text_light"
                                    android:textSize="16sp"
                                    app:fontFamily="@font/rubik_regular" />
                            </LinearLayout>
                        </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/commnctn"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/margin_20dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_10dp"
                                android:layout_marginTop="@dimen/margin_10dp"
                                android:text="Emergency Contact 1"
                                android:textColor="@color/Primary_dark"
                                android:textSize="14sp"
                                app:fontFamily="@font/rubik_regular" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/textfield_background"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/frag_Communicn_emergency_contact1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_10dp"
                                    android:backgroundTint="@android:color/transparent"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/text_light"
                                    android:textSize="16sp"
                                    app:fontFamily="@font/rubik_regular" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_10dp"
                                android:layout_marginTop="@dimen/margin_10dp"
                                android:text="Relationship"
                                android:textColor="@color/Primary_dark"
                                android:textSize="14sp"
                                app:fontFamily="@font/rubik_regular" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/textfield_background"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/frag_Communicn_relation1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_10dp"
                                    android:backgroundTint="@android:color/transparent"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/text_light"
                                    android:textSize="16sp"
                                    app:fontFamily="@font/rubik_regular" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_10dp"
                                android:layout_marginTop="@dimen/margin_10dp"
                                android:text="Mobile Number"
                                android:textColor="@color/Primary_dark"
                                android:textSize="14sp"
                                app:fontFamily="@font/rubik_regular" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/textfield_background"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/frag_Communicn_emergency_mobile1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_10dp"
                                    android:backgroundTint="@android:color/transparent"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/text_light"
                                    android:textSize="16sp"
                                    app:fontFamily="@font/rubik_regular" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/margin_20dp"
                               />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_10dp"
                                android:layout_marginTop="@dimen/margin_10dp"
                                android:text="Emergency Contact 2"
                                android:textColor="@color/Primary_dark"
                                android:textSize="14sp"
                                app:fontFamily="@font/rubik_regular" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/textfield_background"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/frag_Communicn_emergency_contact2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_10dp"
                                    android:backgroundTint="@android:color/transparent"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/text_light"
                                    android:textSize="16sp"
                                    app:fontFamily="@font/rubik_regular" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_10dp"
                                android:layout_marginTop="@dimen/margin_10dp"
                                android:text="Relationship"
                                android:textColor="@color/Primary_dark"
                                android:textSize="14sp"
                                app:fontFamily="@font/rubik_regular" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/textfield_background"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/frag_Communicn_relation2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_10dp"
                                    android:backgroundTint="@android:color/transparent"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/text_light"
                                    android:textSize="16sp"
                                    app:fontFamily="@font/rubik_regular" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_10dp"
                                android:layout_marginTop="@dimen/margin_10dp"
                                android:text="Mobile Number"
                                android:textColor="@color/Primary_dark"
                                android:textSize="14sp"
                                app:fontFamily="@font/rubik_regular" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical"
                                android:background="@drawable/textfield_background"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/frag_Communicn_emergency_mobile2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_10dp"
                                    android:backgroundTint="@android:color/transparent"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/text_light"
                                    android:textSize="16sp"
                                    app:fontFamily="@font/rubik_regular" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="100dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>