<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/myinfo_card_bg_radius"
    android:orientation="vertical"
    android:layout_marginVertical="@dimen/spacing_medium"
    android:padding="10dp">









    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/MeasureName"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:text="Before Meal(mg/dL)"
            android:textColor="@color/black"
            android:textColorHint="@color/text_light"
            android:textSize="16sp"
            app:fontFamily="@font/rubik_regular" />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:text=" ("
            android:textColor="@color/black"
            android:textColorHint="@color/text_light"
            android:textSize="16sp"
            app:fontFamily="@font/rubik_regular" />
        <TextView
            android:id="@+id/UnitName"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:text=" (mg/dL)"
            android:textColor="@color/black"
            android:textColorHint="@color/text_light"
            android:textSize="16sp"
            app:fontFamily="@font/rubik_regular" />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:text=")"
            android:textColor="@color/black"
            android:textColorHint="@color/text_light"
            android:textSize="16sp"
            app:fontFamily="@font/rubik_regular" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/spacing_xmedium"
        android:orientation="horizontal"


        android:background="@drawable/myinfo_card_bg_radius"

        >

        <TextView
            android:id="@+id/Range1"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_medium"
            android:backgroundTint="@android:color/transparent"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/range"
            android:textColorHint="@color/text_light"
            android:textSize="16sp"
            app:fontFamily="@font/rubik_regular" />



        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_medium"
            android:backgroundTint="@android:color/transparent"
            android:maxLines="1"
            android:singleLine="true"
            android:text="-"
            android:textColor="@color/range"
            android:textColorHint="@color/text_light"
            android:textSize="16sp"
            app:fontFamily="@font/rubik_regular" />




            <TextView
                android:id="@+id/Range2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_medium"
                android:backgroundTint="@android:color/transparent"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/range"
                android:textColorHint="@color/text_light"
                android:textSize="16sp"
                app:fontFamily="@font/rubik_regular" />



    </LinearLayout>




</LinearLayout>

</LinearLayout>