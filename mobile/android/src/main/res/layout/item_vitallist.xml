<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:padding="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">
        <TextView
            android:id="@+id/item_vitel_list_head_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pulse"
            android:textSize="18sp"
            android:textStyle="normal"
            android:padding="@dimen/margin_10dp"
            android:textColor="@color/Primary_dark"
            android:background="@drawable/top_card_border"/>

        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/recyclerview_vitals2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_grey1">

        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View More..."
            android:textSize="15sp"
            android:textStyle="normal"
            android:padding="@dimen/margin_10dp"
            android:textColor="@color/Primary_dark"
            android:background="@drawable/bottom_card_border"/>

    </LinearLayout>
</LinearLayout>